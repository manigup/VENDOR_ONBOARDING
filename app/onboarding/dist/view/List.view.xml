<mvc:View
    controllerName="sp.fiori.onboarding.controller.List"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    class="sapUiSizeCompact"
>
    <Page
        id="_IDGenPage1"
        title="Supplier List"
        titleAlignment="Center"
    >
        <headerContent>
            <Button
                id="_IDGenButton1"
                text="Create Supplier"
                icon="sap-icon://add"
                press="onCreatePress"
                type="Transparent"
            />
        </headerContent>
        <content>
            <Table
                id="vendorList"
                class="sapUiContentPadding sapUiLargeMarginBottom"
                items="{DataModel>/}"
                alternateRowColors="true"
                sticky="ColumnHeaders,HeaderToolbar"
                growing="true"
                growingThreshold="50"
            >
                <headerToolbar>
                    <OverflowToolbar id="_IDGenOverflowToolbar1">
                        <ToolbarSpacer id="_IDGenToolbarSpacer2" />
                        <SearchField
                            id="search"
                            width="500px"
                            search="onSearch"
                            showRefreshButton="true"
                            placeholder="Search by Supplier, Business Partner, Status &amp; Approval Pending @"
                        />
                        <DatePicker
                            width="172px"
                            id="createFromDateId"
                            placeholder="Creation From Date"
                            tooltip="Creation From Date"
                            valueFormat="yyyyMMdd"
                            change="onCreationDateFilter"
                        />
                        <DatePicker
                            width="154px"
                            id="createToDateId"
                            placeholder="Creation To Date"
                            tooltip="Creation To Date"
                            valueFormat="yyyyMMdd"
                            change="onCreationDateFilter"
                        />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column
                        id="_IDGenColumn1"
                        hAlign="Center"
                        width="4rem"
                    >
                        <Label
                            id="_IDGenLabel1"
                            design="Bold"
                            text="Supplier"
                        />
                    </Column>
                    <Column
                        id="_IDGenColumn2"
                        hAlign="Center"
                        width="3rem"
                        minScreenWidth="1300px"
                        demandPopin="true"
                        popinDisplay="Inline"
                    >
                        <Label
                            id="_IDGenLabel2"
                            design="Bold"
                            text="Supplier Sub-Type"
                            wrapping="true"
                        />
                    </Column>
                    <Column
                        id="_IDGenColumn3"
                        hAlign="Center"
                        width="3rem"
                        minScreenWidth="700px"
                        demandPopin="true"
                        popinDisplay="Inline"
                    >
                        <Label
                            id="_IDGenLabel3"
                            design="Bold"
                            text="Creation Date"
                            wrapping="true"
                        />
                    </Column>
                    <Column
                        id="_IDGenColumn4"
                        hAlign="Center"
                        width="3rem"
                        minScreenWidth="1000px"
                        demandPopin="true"
                        popinDisplay="Inline"
                    >
                        <Label
                            id="_IDGenLabel4"
                            design="Bold"
                            text="Business Partner"
                            wrapping="true"
                        />
                    </Column>
                    <Column
                        id="_IDGenColumn5"
                        hAlign="Center"
                        width="3rem"
                        minScreenWidth="900px"
                        demandPopin="true"
                        popinDisplay="Inline"
                    >
                        <Label
                            id="_IDGenLabel5"
                            design="Bold"
                            text="Department"
                        />
                    </Column>
                    <Column
                        id="_IDGenColumn6"
                        hAlign="Center"
                        width="5rem"
                        minScreenWidth="700px"
                        demandPopin="true"
                        popinDisplay="Inline"
                    >
                        <Label
                            id="_IDGenLabel6"
                            design="Bold"
                            text="Status"
                        />
                    </Column>
                    <Column
                        id="_IDGenColumn7"
                        hAlign="Center"
                        width="2rem"
                        minScreenWidth="700px"
                        demandPopin="true"
                        popinDisplay="Inline"
                    >
                        <Label
                            id="_IDGenLabel7"
                            design="Bold"
                            text="Level"
                        />
                    </Column>
                    <Column
                        id="_IDGenColumn8"
                        hAlign="Center"
                        width="4rem"
                        minScreenWidth="1300px"
                        demandPopin="true"
                        popinDisplay="Inline"
                    >
                        <Label
                            id="_IDGenLabel8"
                            design="Bold"
                            text="Approval Pending @"
                            wrapping="true"
                        />
                    </Column>
                    <Column
                        id="_IDGenColumn9"
                        hAlign="Center"
                        width="4rem"
                    >
                        <Label
                            id="_IDGenLabel9"
                            design="Bold"
                            text="Action"
                        />
                    </Column>
                    <Column
                        id="_IDGenColumn10"
                        hAlign="Center"
                        width="1rem"
                    />
                </columns>
                <items>
                    <ColumnListItem id="_IDGenColumnListItem1">
                        <cells>
                            <ObjectIdentifier
                                id="_IDGenObjectIdentifier1"
                                title="{parts:[{path:'DataModel>Vendor'},{path:'DataModel>ResetValidity'}],formatter:'formatter.addVendorColor'}"
                                text="{DataModel>VenName}"
                                titleActive="true"
                                tooltip="{= ${DataModel>ResetValidity} === 'X' ? 'Validity Expired' : ''}"
                                titlePress="onVendorPress"
                            />
                            <ObjectStatus
                                id="_IDGenObjectStatus1"
                                text="{path:'DataModel>VenSubType',formatter:'formatter.formatVendorSubType'}"
                                state="Indication08"
                                class="objectStatus"
                            />
                            <Text
                                id="_IDGenText1"
                                text="{path:'DataModel>CreatedOn',formatter:'formatter.formatDate'}"
                            />
                            <ObjectStatus
                                id="_IDGenObjectStatus2"
                                text="{DataModel>Lifnr}"
                                state="Indication03"
                                class="objectStatus"
                            />
                            <Text
                                id="_IDGenText2"
                                text="{DataModel>Dept}"
                            />
                            <ObjectStatus
                                id="_IDGenObjectStatus3"
                                text="{DataModel>StatusText}"
                                inverted="true"
                                state="{path:'DataModel>Status',formatter:'formatter.statusState'}"
                            />
                            <ObjectStatus
                                id="_IDGenObjectStatus4"
                                text="{DataModel>Level}"
                                inverted="true"
                                state="{parts:[{path:'DataModel>Level'},{path:'DataModel>Lifnr'}],formatter:'formatter.levelState'}"
                            />
                            <ObjectStatus
                                id="_IDGenObjectStatus5"
                                text="{DataModel>ApprovalPending}"
                                state="{parts:[{path:'DataModel>Level'},{path:'DataModel>Lifnr'}],formatter:'formatter.levelState'}"
                                class="objectStatus"
                            />
                            <FlexBox
                                id="_IDGenFlexBox1"
                                direction="Column"
                                alignItems="Center"
                            >
                                <Button
                                    id="_IDGenButton2"
                                    class="approveBtn"
                                    text="Approve"
                                    type="Accept"
                                    press="onActionPress"
                                    width="80px"
                                    visible="{= ${DataModel>Approve}}"
                                >
                                    <customData>
                                        <core:CustomData
                                            key="action"
                                            value="A"
                                        />
                                    </customData>
                                </Button>
                                <Button
                                    id="_IDGenButton3"
                                    class="rejectBtn"
                                    text="Reject"
                                    type="Reject"
                                    press="onActionPress"
                                    width="80px"
                                    visible="{= ${DataModel>Approve}}"
                                >
                                    <customData>
                                        <core:CustomData
                                            key="action"
                                            value="R"
                                        />
                                    </customData>
                                </Button>
                            </FlexBox>
                            <core:Icon
                                id="_IDGenIcon1"
                                src="sap-icon://attachment"
                                tooltip="Attachments"
                                color="#fbc02d"
                                size="1.2rem"
                                press="onAttachmentPress"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
