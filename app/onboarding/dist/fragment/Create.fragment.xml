<Dialog
    id="createDialog"
    title="Create Supplier"
    titleAlignment="Center"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    draggable="true"
    escapeHandler=".onDialogEscapeHandler"
    contentWidth="320px"
    class="sapUiSizeCompact"
>
    <content>
        <f:SimpleForm
            id="_IDGenSimpleForm1"
            editable="true"
            layout="ResponsiveGridLayout"
        >
            <Label
                id="_IDGenLabel1"
                design="Bold"
                required="true"
                text="Supplier Sub-Type"
            />
            <Select
                id="_IDGenSelect1"
                forceSelection="false"
                selectedKey="{path:'CreateModel>/VenSubType',type:'sap.ui.model.type.String',constraints:{minLength:2}}"
                valueStateText="Required"
                fieldGroupIds="required"
            >
                <core:Item
                    id="_IDGenItem1"
                    key=""
                    text=""
                />
                <core:Item
                    id="_IDGenItem2"
                    key="DM"
                    text="Domestic"
                />
                <core:Item
                    id="_IDGenItem3"
                    key="IP"
                    text="Import"
                />
                <core:Item
                    id="_IDGenItem4"
                    key="EM"
                    text="Employee"
                />
            </Select>
            <Label
                id="_IDGenLabel2"
                design="Bold"
                required="true"
                text="Supplier Name"
            />
            <Input
                id="_IDGenInput1"
                value="{path:'CreateModel>/VenName',type:'sap.ui.model.type.String',constraints:{minLength:1}}"
                valueStateText="Required"
                fieldGroupIds="required"
            />
            <Label
                id="_IDGenLabel3"
                design="Bold"
                required="true"
                text="Department"
            />
            <Input
                id="_IDGenInput2"
                value="{path:'CreateModel>/Dept',type:'sap.ui.model.type.String',constraints:{minLength:1}}"
                valueStateText="Required"
                fieldGroupIds="required"
            />
            <Label
                id="_IDGenLabel4"
                design="Bold"
                required="true"
                text="Telephone No."
            />
            <Input
                id="_IDGenInput3"
                type="Number"
                value="{path:'CreateModel>/VenTel',type:'sap.ui.model.type.String',constraints:{minLength: 10,maxLength:10}}"
                valueStateText="Required"
                fieldGroupIds="required"
            />
            <Label
                id="_IDGenLabel5"
                design="Bold"
                required="true"
                text="City"
            />
            <Input
                id="_IDGenInput4"
                value="{path:'CreateModel>/City',type:'sap.ui.model.type.String',constraints:{minLength:1}}"
                valueStateText="Required"
                fieldGroupIds="required"
            />
            <Label
                id="_IDGenLabel6"
                design="Bold"
                required="true"
                text="Supplier Email"
            />
            <Input
                id="_IDGenInput5"
                value="{path:'CreateModel>/VenMail',type:'.customEMailType'}"
                valueStateText="Required"
                fieldGroupIds="required"
            />
        </f:SimpleForm>
    </content>
    <beginButton>
        <Button
            id="_IDGenButton1"
            type="Emphasized"
            text="Submit"
            press="onCreateSubmit"
        />
    </beginButton>
    <endButton>
        <Button
            id="_IDGenButton2"
            type="Reject"
            text="Cancel"
            press="onDialogCancel"
        />
    </endButton>
</Dialog>
